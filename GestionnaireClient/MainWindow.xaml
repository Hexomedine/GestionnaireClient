<Window x:Name="Gestionnaire" x:Class="GestionnaireClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionnaireClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400" Closed="Gestionnaire_Closed" Loaded="Gestionnaire_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="CustomerDataGrid" ItemsSource="{Binding Customers}" AutoGenerateColumns="False" Margin="0,0,0,36" Grid.RowSpan="2" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" />
                <DataGridTextColumn Header="Prenom"  Binding="{Binding FirstName}"/>
                <DataGridHyperlinkColumn Header="Email" Binding="{Binding Email}" Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="1" x:Name="SaveButton" Click="SaveButton_Click">
            Sauvegarder
        </Button>
    </Grid>
</Window>
